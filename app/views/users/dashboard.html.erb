<div class="page-content page-content-spacespage">
  <div class="spacespage">
    <div class="title">
      <h4 class="name pull-left">Members</h4>
      <div class="clearfix"></div>
    </div>
    <div class="inner">
      <div class="actiondiv">
        <div class="pull-left">
          <%= link_to "Add Member".html_safe, 'javascript:void(0)', :class => "btn btn-primary btn-sm margin-remove",:data => {:disable_with => "<i class='icon-spinner icon-spin'></i> Adding..."} %>
        </div>
        <div class="clearfix"></div>
      </div>
      <table id="user_list" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th style="width:140px !important;">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @all_members.each do |member| %>
            <tr>
              <td>
                <%= member.first_name %> <%= member.last_name %>
              </td>
              <td>
                <%= member.email %>
              </td>
              <td>
                <%= member.role_id.present? ? member.role.name : '' %>
              </td>
              <td>
                <%= link_to "Show".html_safe, 'javascript:void(0)', :method => :get , data: { toggle: 'tooltip', placement: 'top', trigger: 'hover', :disable_with => "<i class='icon-spinner icon-spin'></i>" }, title: 'Show'%> &nbsp;
                <%= link_to "Edit".html_safe,'javascript:void(0)',  :method => :get , data: { toggle: 'tooltip', placement: 'top', trigger: 'hover', :disable_with => "<i class='icon-spinner icon-spin'></i>" }, title: 'Edit'%> &nbsp;
                <%= link_to "Delete".html_safe,'javascript:void(0)', :method => :get , data: { toggle: 'tooltip', placement: 'top', trigger: 'hover', :disable_with => "<i class='icon-spinner icon-spin'></i>" }, title: 'Delete'%>&nbsp;
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
