<%= form_for @book, :html => { :class => "form-horizontal book" } do |f| %>

  <% if @book.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%=f.error_span(:title) %>
  </div>
  <div class="form-group">
    <%= f.label :author, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :author, :class => 'form-control' %>
    </div>
    <%=f.error_span(:author) %>
  </div>
  <div class="form-group">
    <%= f.label :published_by, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :published_by, :class => 'form-control' %>
    </div>
    <%=f.error_span(:published_by) %>
  </div>
  <div class="form-group">
    <%= f.label :student_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :student_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:student_id) %>
  </div>
  <div class="form-group">
    <%= f.label :date_of_issued, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :date_of_issued, :class => 'form-control' %>
    </div>
    <%=f.error_span(:date_of_issued) %>
  </div>
  <div class="form-group">
    <%= f.label :date_of_return, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :date_of_return, :class => 'form-control' %>
    </div>
    <%=f.error_span(:date_of_return) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                books_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
